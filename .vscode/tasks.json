{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/cosmosofflinewithLCC/cosmosofflinewithLCC.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build-function",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/RemoteSync/RemoteSync.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/New folder.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],            "problemMatcher": "$msCompile"
        },        {
            "label": "build-all",
            "dependsOn": ["build-function", "build"],
            "dependsOrder": "sequence"
        },        {
            "label": "start-function-app",
            "type": "shell",
            "command": "cd ${workspaceFolder}/RemoteSync && func host start --dotnet-isolated",
            "isBackground": true,
            "problemMatcher": "$func-dotnet-watch",
            "dependsOn": ["build-function"],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/New folder.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}